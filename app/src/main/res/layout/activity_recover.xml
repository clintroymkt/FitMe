<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/white_background"
    android:focusable="true"
    android:focusableInTouchMode="true"

    tools:context=".ui.RecoverActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/logoColorGold"

        />

    <TextView
        android:id="@+id/txtRestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="start"
        android:text="Restore from Firebase"
        android:textColor="@color/logoColorWhite"
        android:textSize="34sp" />


    <ScrollView
        android:layout_marginTop="50dp"
        android:id="@+id/spo2Scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edge_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:background="@drawable/round_edge_card"
                android:elevation="8dp">

                <RelativeLayout
                    android:id="@+id/inputFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"



                    android:padding="5sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/firbaselogo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/firebase" />

                    <TextView
                        android:id="@+id/disclaimertxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/firbaselogo"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center"
                        android:text="If you have backed up previous FitMe data, you can use click the restore button to restore recover all your previous watch data." />

                    <Button
                        android:id="@+id/btnRstore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/disclaimertxt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Restore" />

















                </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>