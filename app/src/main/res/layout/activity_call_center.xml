<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/white_background"

    tools:context=".CallCenterActivity">

    <View
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ic_profile_red"
        android:elevation="1dp"
        android:scaleX="1.12"
        android:scaleY="1.2"
        android:outlineProvider="bounds" >

    </View>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:elevation="1dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/myhealthic"
        app:civ_border_color="#FFFFFFFF"
        app:civ_border_width="2dp" />
    <TextView
        android:id="@+id/contactname"
        android:fontFamily="@font/nunito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/userImage"
        android:elevation="1dp"
        android:gravity="center"
        android:text="MyHealth Call Center "
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />


<LinearLayout
    android:layout_below="@id/card_view"
    android:elevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


</LinearLayout>

    <LinearLayout

        android:layout_below="@id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        android:padding="30dp"
        android:elevation="1dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="246dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <ImageView
            android:id="@+id/wAimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:elevation="1dp"
            android:src="@drawable/whatsapplarge" />

            <TextView
                android:fontFamily="@font/nunito"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click The Button below to reach us on WhatsApp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>













            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/callWABtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:background="@drawable/button_whatsapp"
                android:text="Contact Us"
                app:backgroundTint="@null"



                android:textColor="#ffffff"
                android:textSize="20sp" />





    </LinearLayout>

</RelativeLayout>