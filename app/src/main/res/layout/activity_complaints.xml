                                    android:text="Description 1"

                                    android:padding="10sp"
                                    android:textSize="14sp"
                                    android:layout_weight="2"
                                    android:gravity="center_horizontal"

                                    />





                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Code 1"

                                    android:padding="10sp"
