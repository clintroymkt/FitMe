<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MachineActivity"
    android:background="@drawable/white_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_background">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:visibility="visible"
        >


        <TextView
            android:background="@drawable/white_rectangle_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1.6"


            android:hint="Stethoscope"

            android:padding="8dp"
            android:textColorHint="@color/highlightColor"
            android:textSize="20sp" />

        <ImageButton
            android:background="@drawable/white_rectangle_background"
            android:id="@+id/imageStethoscope"
            android:layout_width="60sp"
            android:layout_height="60sp"

            android:padding="2sp"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toTopOf="@id/viewDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/purple_200" />







    </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:visibility="visible"
            >


            <TextView
                android:background="@drawable/white_rectangle_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1.6"


                android:hint="Multiparameter Monitor(Mint)"

                android:padding="8dp"
                android:textColorHint="@color/highlightColor"
                android:textSize="20sp" />

            <ImageButton
                android:background="@drawable/white_rectangle_background"
                android:id="@+id/imageMint"
                android:layout_width="60sp"
                android:layout_height="60sp"

                android:padding="2sp"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toTopOf="@id/viewDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/purple_200" />







        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:visibility="visible"
            >


            <TextView
                android:background="@drawable/white_rectangle_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1.6"


                android:hint="Multiparameter Monitor(Bell)"

                android:padding="8dp"
                android:textColorHint="@color/highlightColor"
                android:textSize="20sp" />

            <ImageButton
                android:background="@drawable/white_rectangle_background"
                android:id="@+id/imageMutlipara"
                android:layout_width="60sp"
                android:layout_height="60sp"

                android:padding="2sp"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toTopOf="@id/viewDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/purple_200" />







        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>