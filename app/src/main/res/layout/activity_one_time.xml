<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    tools:context=".ui.ConsultancyAdmin">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_background"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                
                android:padding="30dp"
                tools:context=".ui.Consultancy"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="-68dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verification OTP"
                    android:textSize="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/purple_500"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enter Virtual Consult verification OTP"
                    android:textSize="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">



                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:background="@drawable/opttext_bg"
                    android:focusable="true"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"/>

                    <EditText
                        android:background="@drawable/opttext_bg"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"

                        android:focusable="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:background="@drawable/opttext_bg"
                        android:focusable="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:background="@drawable/opttext_bg"
                        android:focusable="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:background="@drawable/opttext_bg"
                        android:focusable="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>


                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:background="@drawable/opttext_bg"
                        android:focusable="true"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>


                <Button
                    android:id="@+id/submitOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_rounded"
                    android:text="Submit"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />


            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

